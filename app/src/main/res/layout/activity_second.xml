<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/continue_tv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/account_profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbar_bgd_color"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <ImageButton
                        android:id="@+id/account_profile_back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/account_profile_back_btn"
                        android:text="Health Insurance"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_profile_toolbar"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:includeFontPadding="false"
                        android:text="1"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#808080"
                        android:layout_weight="0.5"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/grey_circle"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:includeFontPadding="false"
                        android:text="2"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#808080"
                        android:layout_weight="0.5"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/grey_circle"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:includeFontPadding="false"
                        android:text="3"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#808080"
                        android:layout_weight="0.5"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/grey_circle"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:includeFontPadding="false"
                        android:text="4"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Hey,Username"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:id="@+id/username_tv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Let's find the right Health insurance for you"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:id="@+id/right_insurance_tv"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="who would you like to insure?"
                    android:gravity="left"
                    android:textColor="#000000"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/ll_one">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/self_cv"
                        android:layout_weight="1"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/self_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Self"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/self_spouse"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spouse_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Spouse"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/ll_two">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/son_cv"
                        android:layout_weight="1"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/son_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Son"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/daughter_cv"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/daughter_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Daughter"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/ll_three">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/father_cv"
                        android:layout_weight="1"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/father_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Father"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mother_cv"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/mother_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Mother"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_more_members_cv"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:id="@+id/add_more_members_ll"
                        android:background="@drawable/rect_with_grey_border">
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/more_members"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:text="More Members"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/ll_five">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/grand_father_cv"
                        android:layout_weight="1"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/grand_father_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Grand Father"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/grand_mother_cv"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/grand_mother_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Grand Mother"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/ll_six">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/father_inlaw_cv"
                        android:layout_weight="1"
                        android:layout_margin="5dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/father_inlaw_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Father-in-law"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mother_inlaw_cv"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/rect_with_grey_border">
                            >
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/mother_inlaw_checkbox"
                                android:gravity="center"
                                >

                            </CheckBox>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:text="Mother-in-law"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="Continue"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbar_bgd_color"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/continue_tv"
        />
</RelativeLayout>
